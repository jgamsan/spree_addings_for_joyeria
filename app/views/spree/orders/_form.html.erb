<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @order } %>
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th class="cart-item-description-header" colspan="2" style="vertical-align:middle;text-align:center;"><%= t(:item) %></th>
      <th class="cart-item-price-header" style="vertical-align:middle;text-align:center;"><%= t(:price) %></th>
      <th class="cart-item-quantity-header" style="vertical-align:middle;text-align:center;"><%= t(:qty) %></th>
      <th class="cart-item-total-header" style="vertical-align:middle;text-align:center;"><%= t(:total) %></th>
      <th class="cart-item-delete-header" style="vertical-align:middle;text-align:center;"></th>
    </tr>
  </thead>
  <tbody id="line_items" data-hook>
    <%= order_form.fields_for :line_items do |item_form| %>
      <%= render :partial => 'line_item', :locals => { :variant => item_form.object.variant, :line_item => item_form.object, :item_form => item_form } %>
    <% end %>
    <%= render :partial => 'subtotal' %>
  </tbody>
  <%= render "spree/orders/adjustments" unless @order.adjustments.eligible.blank? %>
</table>
