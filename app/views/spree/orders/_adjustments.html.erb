<thead>
  <tr data-hook="cart_adjustments_headers">
    <th class="cart-adjustment-header" colspan="6"><%= t(:order_adjustments) %></th>
  </tr>
</thead>
<tbody id="cart_adjustments" data-hook>
  <% @order.adjustments.eligible.each do |adjustment| %>
    <tr>
      <td colspan="4" valign="center"><%= adjustment.label %></td>
      <td style="vertical-align:middle;text-align:center;"><h5><%= adjustment.display_amount %></h5></td>
      <td></td>
    </tr>
  <% end %>
</tbody>