<div id="login-wraper">
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "form login-form"}) do |f| %>
    <legend>Login <span class="blue">Clinica Nutricion</span></legend>
    <div class="body">
      <label><%= t(:email) %></label>
      <%= f.text_field :email %>
      <label><%= t(:password) %></label>
      <%= f.password_field :password %>
    </div>
    <div class="footer">
      <label class="checkbox inline">
        <%= f.check_box :remember_me %> <%= f.label :remember_me, t(:remember_me) %>
      </label>
      <%= f.submit t(:login), :class => "btn btn-success" %>
    </div>
  <% end -%>
</div>