<div id="login-wraper">
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "form login-form"}) do |f| %>
    <legend>Login <span class="blue">Clinica Nutricion</span></legend>
    <div class="body">
      <label>Usuario</label>
      <%= f.text_field :username %>
      <label>Password</label>
      <%= f.password_field :password %>
    </div>
    <div class="footer">
      <label class="checkbox inline">
        <input type="checkbox" id="inlineCheckbox1" value="option1"> Remember me
      </label>
      <%= f.submit "Login", :class => "btn btn-success" %>
    </div>
  <% end -%>
</div>